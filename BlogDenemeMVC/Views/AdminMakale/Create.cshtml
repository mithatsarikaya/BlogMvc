@model BlogDenemeMVC.Models.Makale

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("Create","AdminMakale",FormMethod.Post,new { enctype="multipart/form-data"}))
